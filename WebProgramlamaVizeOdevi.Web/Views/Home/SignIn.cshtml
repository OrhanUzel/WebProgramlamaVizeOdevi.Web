@{
    ViewData["Title"] = "SignIn";
}
@model WebProgramlamaVizeOdevi.Web.ViewModels.SignInViewModel


@section Scripts
{

    @await Html.PartialAsync("_ValidationScriptsPartial")
    
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <script src="https://kit.fontawesome.com/363773f36f.js" crossorigin="anonymous"></script>

    <style>
        .vertical-center {
            min-height: 100%;
            display: flex;
            align-items: center;
        }
    </style>
</head>
<body class="bg-light">

    <div class="container-fluid bg-light text-dark py-3">
        <div class="text-center">
            <h2>Kullanıcı Girişi</h2>
        </div>
    </div>

    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
    </div>


    <div class="container mt-5">
        <div class="row vertical-center">
            <div class="col-md-6 offset-md-3">
                <form asp-controller="Home" asp-action="SignIn" asp-route-returnUrl="@Context.Request.Query["returnURL"]" method="post">
                    <div class="form-group">
                        <label for="Email" class="col-md-4 col-form-label" asp-for="Email"></label>
                        <input asp-for="Email" class="form-control">
                        <span class="text-danger" asp-validation-for="Email"> </span>
                    </div>
                    <div class="form-group">
                       

                        <label for="Password" class="col-md-4 col-form-label" asp-for="Password"></label>
                       

                        <div class="input-group">
                            <input asp-for="Password" class="form-control">
                            <span class="text-danger" asp-validation-for="Password"> </span>
                        
                            <div class="input-group-append">
                                <button onclick="sifreGosterme()" type="button" class="btn btn-light " id="showPassword">
                                    <i id="imaj" class="fas fa-eye"></i> <!-- FontAwesome ikonu -->
                                </button>

                            </div>
                        </div>
                    </div>
                    <div class="form-row align-items-center">
                        <div class="col-md-6">
                            <div class="form-group form-check">
                                <br />
                               @*  <br /> *@
                                <input type="checkbox" class="form-check-input" asp-for="RememberMe">
                                <label class="form-check-label" asp-for="RememberMe">Beni Hatırla</label>
                            </div>
                        </div>
                        <div class="col-md-6 text-right">
                            <br />
                            <a class="btn btn-link float-end" asp-controller="Home" asp-action="SignUp">Kayıt Ol</a>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Giriş Yap</button>
                </form>
            </div>
        </div>
    </div>

    <script src="~/js/site.js"></script>

    <!-- JavaScript için bootstrapp -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>



</body>
</html>
