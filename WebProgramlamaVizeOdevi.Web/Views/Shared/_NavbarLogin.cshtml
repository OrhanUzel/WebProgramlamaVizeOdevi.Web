@using System.Security.Claims



@if (User.Identity!.IsAuthenticated)   
{
    <ul class="navbar-nav me-5">

        <li class="nav-item">
            <a class="nav-link" href="#" data-toggle="modal" data-target="#cartModal" onclick="displayCart()">
                <i class="fa-solid fa-shopping-cart"></i> Sepetim <span class="cart-count" id="cartCount">0</span>
            </a>
        </li>

        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" data-toggle="dropdown" aria-haspopup="true">
                @User.Identity.Name

            </a>

            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">


                <li>

                    <a class="dropdown-item" asp-route-returnurl="/Home/Index" asp-controller="Member" asp-action="LogOut">Çıkış Yap</a>
                    <!-- Button trigger modal -->


                </li>

            </ul>

            <style>
                .dropdown-menu-right {
                    right: 0;
                    left: auto;
                    width: auto;
                    overflow-x:hidden;
                }
            </style>

        </li>
    </ul>





}
else
{
    <ul class="navbar-nav me-5">

        <li class="nav-item">
            <a class="nav-link" href="#" data-toggle="modal" data-target="#cartModal" onclick="displayCart()">
                <i class="fa-solid fa-shopping-cart"></i> Sepetim <span class="cart-count" id="cartCount">0</span>
            </a>
        </li>



        <li>
            <a class="btn btn-outline-success mx-1 bg-gradient  flex-fill text-center"  asp-area="" asp-controller="Home" asp-action="SignIn">Giriş Yap</a>

        </li>

        <li>
            <a class="btn btn-outline-success mx-1 bg-warning  flex-fill text-center"  asp-area="" asp-controller="Home" asp-action="SignUp">Kayıt Ol</a>

        </li>

    </ul>


}


